<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.rojao.tvlive.VodActivity">
	<VideoView android:id="@+id/id_videoPlayer"
	           android:layout_width="match_parent"
	           android:layout_height="match_parent"/>
	<WebView android:id="@+id/id_webView" android:layout_width="match_parent"
	         android:layout_height="match_parent"
	         android:visibility="gone"/>
	<com.rojao.tvlive.weiget.loadingview.SlackLoadingView android:id="@+id/id_loadingView"
	                                                      android:layout_width="200dp"
	                                                      android:layout_height="200dp"
	                                                      android:layout_centerInParent="true"
	                                                      android:visibility="gone"/>

	<TextView android:id="@+id/id_timmer" android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_alignParentRight="true"
	          android:layout_alignParentTop="true"
	          android:layout_marginRight="24dp"
	          android:layout_marginTop="24dp"
	          android:gravity="center"
	          android:textColor="@android:color/white"
	          android:textSize="30sp"
	          android:visibility="gone"/>
	<ImageView android:id="@+id/id_recommend_iv" android:layout_width="match_parent"
	           android:layout_height="match_parent"
	           android:visibility="gone"/>
</RelativeLayout>

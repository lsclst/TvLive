<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="200dp"
              android:focusable="true"
              android:gravity="bottom|center_horizontal"
              android:orientation="horizontal"
              android:layout_marginLeft="200dp"
              android:layout_marginRight="200dp">

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:gravity="center"
		android:orientation="vertical">
		<ImageView android:id="@+id/id_ad_1"
		           android:layout_width="150dp" android:layout_height="150dp"
		           android:src="@mipmap/a1"/>
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"

		          android:background="#88ffffff"
		          android:gravity="center"
		          android:text="数字键[1]"
		          android:textColor="@android:color/white"
		          android:textSize="20sp"

		/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:gravity="center"
		android:orientation="vertical">
		<ImageView android:id="@+id/id_ad_2" android:layout_width="150dp"
		           android:layout_height="150dp"
		           android:src="@mipmap/a1"/>
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
		          android:background="#88ffffff"
		          android:gravity="center"
		          android:text="数字键[2]"
		          android:textColor="@android:color/white"
		          android:textSize="20sp"

		/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:gravity="center"
		android:orientation="vertical">
		<ImageView android:id="@+id/id_ad_3" android:layout_width="150dp"
		           android:layout_height="150dp"
		           android:src="@mipmap/a1"/>
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
		          android:background="#88ffffff"
		          android:gravity="center"
		          android:text="数字键[3]"
		          android:textColor="@android:color/white"
		          android:textSize="20sp"

		/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:gravity="center"
		android:orientation="vertical">
		<ImageView android:id="@+id/id_ad_4" android:layout_width="150dp"
		           android:layout_height="150dp"
		           android:src="@mipmap/a1"/>
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
		          android:background="#88ffffff"
		          android:gravity="center"
		          android:text="数字键[4]"
		          android:textColor="@android:color/white"
		          android:textSize="20sp"

		/>
	</LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
>

	<com.owen.tvrecyclerview.widget.TvRecyclerView android:id="@+id/id_backLook_Date"
	                                               android:layout_width="match_parent"
	                                               android:layout_height="0dp"
	                                               android:layout_weight="2"
	                                               android:orientation="horizontal"
	                                               app:tv_isMenu="true"
	                                               app:tv_layoutManager="ListLayoutManager"
	/>

	<View android:layout_width="match_parent"
	      android:layout_height="2px"
	      android:background="#3affffff"/>
	<com.owen.tvrecyclerview.widget.TvRecyclerView android:id="@+id/id_backLook_detail"
	                                               android:layout_width="match_parent"
	                                               android:layout_height="0dp"
	                                               android:layout_weight="8"
	                                               android:orientation="vertical"
	                                               app:tv_isMenu="true"
	                                               app:tv_layoutManager="ListLayoutManager"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/channel_bg"
              android:orientation="horizontal"
>

	<com.owen.tvrecyclerview.widget.TvRecyclerView android:id="@+id/id_Channel_type"
	                                               android:layout_width="80dp"
	                                               android:layout_height="match_parent"
	                                               android:orientation="vertical"
	                                               android:padding="3dp"
	                                               app:tv_isMenu="true"
	                                               app:tv_isSelectFirstVisiblePosition="true"
	                                               app:tv_layoutManager="ListLayoutManager"
	                                               app:tv_numRows="7"
	                                               app:tv_selectedItemIsCentered="true"

	/>

	<View android:layout_width="2px"
	      android:layout_height="match_parent"
	      android:background="#3affffff"/>

	<com.owen.tvrecyclerview.widget.TvRecyclerView android:id="@+id/id_Channel_type_detail"
	                                               android:layout_width="150dp"
	                                               android:layout_height="match_parent"
	                                               android:orientation="vertical"
	                                               android:padding="3dp"
	                                               app:tv_layoutManager="ListLayoutManager"
	                                               app:tv_numRows="7"
	                                               app:tv_selectedItemIsCentered="true"

	/>

	<View android:layout_width="2px"
	      android:layout_height="match_parent"
	      android:background="#3affffff"/>


</LinearLayout>